@model User
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="row">
        <div class="col-md-4">
        </div>
        <div class="col-md-4">
            <section id="form">
                <div class="container">
                    <div class="row">
                        <div class="login-form">
                            <h2>Giriş Yap</h2>
                            <form asp-action="Login">
                                <input type="text" name="UserName" placeholder="Kullanıcı veya Eposta" />
                                <input type="password" name="Password" placeholder="Şifre" />
                                <button type="submit" class="btn btn-default">Giriş Yap</button>
                            </form>
                        </div>
                        <br />
                        Hesabınız yok mu? --- <a href="/User/Register">Kayıt Ol</a>
                    </div>
                </div>
            </section>
        </div>
        <div class="col-md-4">
        </div>
    </div>


